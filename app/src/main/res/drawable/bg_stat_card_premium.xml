<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Subtle glow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#1A00D4FF"
                android:endColor="#0D00D4FF"
                android:type="linear" />
            <corners android:radius="14dp" />
        </shape>
    </item>
    
    <!-- Glass card -->
    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#1FFFFFFF" />
            <stroke
                android:width="1dp"
                android:color="#3300D4FF" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
</layer-list>
