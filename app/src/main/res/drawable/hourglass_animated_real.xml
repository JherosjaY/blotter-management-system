<?xml version="1.0" encoding="utf-8"?>
<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    
    <aapt:attr name="android:drawable">
        <vector
            android:width="120dp"
            android:height="120dp"
            android:viewportWidth="120"
            android:viewportHeight="120">
            
            <!-- Outer Glow Ring -->
            <group android:name="glowRing">
                <path
                    android:strokeColor="@color/electric_blue"
                    android:strokeWidth="1"
                    android:fillColor="@android:color/transparent"
                    android:pathData="M60,60 m-55,0 a55,55 0 1,1 110,0 a55,55 0 1,1 -110,0"
                    android:alpha="0.3" />
            </group>
            
            <!-- Advanced Hourglass Frame with 3D effect -->
            <group android:name="hourglassFrame">
                <!-- Top Container - 3D effect -->
                <path
                    android:strokeColor="@color/electric_blue"
                    android:strokeWidth="3"
                    android:fillColor="#1A1E40AF"
                    android:pathData="M25,15 L95,15 L95,45 L60,60 L25,45 Z" />
                
                <!-- Top Container Highlight -->
                <path
                    android:strokeColor="#4FC3F7"
                    android:strokeWidth="1.5"
                    android:pathData="M27,17 L93,17 L93,43 L60,57 L27,43 Z" />
                
                <!-- Bottom Container - 3D effect -->
                <path
                    android:strokeColor="@color/electric_blue"
                    android:strokeWidth="3"
                    android:fillColor="#1A1E40AF"
                    android:pathData="M25,75 L95,75 L95,105 L60,60 L25,105 Z" />
                
                <!-- Bottom Container Highlight -->
                <path
                    android:strokeColor="#4FC3F7"
                    android:strokeWidth="1.5"
                    android:pathData="M27,77 L93,77 L93,103 L60,63 L27,103 Z" />
                
                <!-- Neck/Center with glow -->
                <path
                    android:strokeColor="@color/electric_blue"
                    android:strokeWidth="2"
                    android:pathData="M58,58 L62,58 L62,62 L58,62 Z" />
                
                <!-- Center glow -->
                <path
                    android:fillColor="#4FC3F7"
                    android:pathData="M59,59 L61,59 L61,61 L59,61 Z"
                    android:alpha="0.8" />
            </group>
            
            <!-- Advanced Top Sand with gradient effect -->
            <group android:name="topSand">
                <path
                    android:name="topSandFill"
                    android:fillColor="#3B82F6"
                    android:pathData="M27,17 L93,17 L93,43 L60,57 L27,43 Z" />
                <!-- Sand gradient overlay -->
                <path
                    android:name="topSandGradient"
                    android:fillColor="#4FC3F7"
                    android:pathData="M27,17 L93,17 L93,25 L27,25 Z"
                    android:alpha="0.6" />
            </group>
            
            <!-- Advanced Bottom Sand with gradient effect -->
            <group android:name="bottomSand">
                <path
                    android:name="bottomSandFill"
                    android:fillColor="#3B82F6"
                    android:pathData="M27,77 L27,77 L27,77 Z" />
                <!-- Bottom sand gradient -->
                <path
                    android:name="bottomSandGradient"
                    android:fillColor="#4FC3F7"
                    android:pathData="M27,77 L27,77 L27,77 Z"
                    android:alpha="0.6" />
            </group>
            
            <!-- Advanced Falling Sand Stream -->
            <group android:name="sandStream">
                <path
                    android:name="streamFlow"
                    android:strokeColor="#4FC3F7"
                    android:strokeWidth="2"
                    android:pathData="M60,57 L60,63"
                    android:alpha="0" />
            </group>
            
            <!-- Multiple Falling Particles with different sizes -->
            <group android:name="fallingParticles">
                <!-- Large particles -->
                <path
                    android:name="particle1"
                    android:fillColor="#4FC3F7"
                    android:pathData="M58,55 A1.5,1.5 0 1,1 61,58 A1.5,1.5 0 1,1 58,55 Z"
                    android:alpha="0" />
                <path
                    android:name="particle2"
                    android:fillColor="#3B82F6"
                    android:pathData="M59,56 A1.2,1.2 0 1,1 62,59 A1.2,1.2 0 1,1 59,56 Z"
                    android:alpha="0" />
                <!-- Medium particles -->
                <path
                    android:name="particle3"
                    android:fillColor="#4FC3F7"
                    android:pathData="M57,58 A1,1 0 1,1 59,60 A1,1 0 1,1 57,58 Z"
                    android:alpha="0" />
                <path
                    android:name="particle4"
                    android:fillColor="#3B82F6"
                    android:pathData="M61,59 A0.8,0.8 0 1,1 63,61 A0.8,0.8 0 1,1 61,59 Z"
                    android:alpha="0" />
                <!-- Small particles -->
                <path
                    android:name="particle5"
                    android:fillColor="#4FC3F7"
                    android:pathData="M58,61 A0.6,0.6 0 1,1 60,63 A0.6,0.6 0 1,1 58,61 Z"
                    android:alpha="0" />
                <path
                    android:name="particle6"
                    android:fillColor="#3B82F6"
                    android:pathData="M62,60 A0.5,0.5 0 1,1 63,62 A0.5,0.5 0 1,1 62,60 Z"
                    android:alpha="0" />
            </group>
            
            <!-- Sparkle Effects -->
            <group android:name="sparkles">
                <path
                    android:name="sparkle1"
                    android:strokeColor="#4FC3F7"
                    android:strokeWidth="1"
                    android:pathData="M30,25 L32,25 M31,24 L31,26"
                    android:alpha="0" />
                <path
                    android:name="sparkle2"
                    android:strokeColor="#4FC3F7"
                    android:strokeWidth="1"
                    android:pathData="M85,30 L87,30 M86,29 L86,31"
                    android:alpha="0" />
                <path
                    android:name="sparkle3"
                    android:strokeColor="#4FC3F7"
                    android:strokeWidth="1"
                    android:pathData="M35,95 L37,95 M36,94 L36,96"
                    android:alpha="0" />
            </group>
            
        </vector>
    </aapt:attr>
    
    <!-- Outer Glow Ring Pulse -->
    <target android:name="glowRing">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="alpha"
                    android:duration="2000"
                    android:repeatCount="infinite"
                    android:valueFrom="0.3"
                    android:valueTo="0.8"
                    android:repeatMode="reverse" />
                <objectAnimator
                    android:propertyName="scaleX"
                    android:duration="2000"
                    android:repeatCount="infinite"
                    android:valueFrom="1.0"
                    android:valueTo="1.1"
                    android:repeatMode="reverse" />
                <objectAnimator
                    android:propertyName="scaleY"
                    android:duration="2000"
                    android:repeatCount="infinite"
                    android:valueFrom="1.0"
                    android:valueTo="1.1"
                    android:repeatMode="reverse" />
            </set>
        </aapt:attr>
    </target>
    
    <!-- Advanced Sand Falling Animation -->
    <target android:name="topSandFill">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="pathData"
                android:duration="4000"
                android:repeatCount="infinite"
                android:valueFrom="M27,17 L93,17 L93,43 L60,57 L27,43 Z"
                android:valueTo="M27,17 L93,17 L60,17 L60,57 L27,43 Z"
                android:valueType="pathType"
                android:interpolator="@android:anim/accelerate_decelerate_interpolator" />
        </aapt:attr>
    </target>
    
    <!-- Top Sand Gradient Animation -->
    <target android:name="topSandGradient">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="pathData"
                    android:duration="4000"
                    android:repeatCount="infinite"
                    android:valueFrom="M27,17 L93,17 L93,25 L27,25 Z"
                    android:valueTo="M60,17 L60,17 L60,17 L60,17 Z"
                    android:valueType="pathType" />
                <objectAnimator
                    android:propertyName="alpha"
                    android:duration="4000"
                    android:repeatCount="infinite"
                    android:valueFrom="0.6"
                    android:valueTo="0.2" />
            </set>
        </aapt:attr>
    </target>
    
    <!-- Advanced Bottom Sand Filling -->
    <target android:name="bottomSandFill">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="pathData"
                android:duration="4000"
                android:repeatCount="infinite"
                android:valueFrom="M27,77 L27,77 L27,77 Z"
                android:valueTo="M27,77 L93,77 L93,103 L60,63 L27,103 Z"
                android:valueType="pathType"
                android:interpolator="@android:anim/accelerate_decelerate_interpolator" />
        </aapt:attr>
    </target>
    
    <!-- Bottom Sand Gradient -->
    <target android:name="bottomSandGradient">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="pathData"
                    android:duration="4000"
                    android:repeatCount="infinite"
                    android:valueFrom="M27,77 L27,77 L27,77 Z"
                    android:valueTo="M27,95 L93,95 L93,103 L27,103 Z"
                    android:valueType="pathType" />
                <objectAnimator
                    android:propertyName="alpha"
                    android:duration="4000"
                    android:repeatCount="infinite"
                    android:valueFrom="0.2"
                    android:valueTo="0.6" />
            </set>
        </aapt:attr>
    </target>
    
    <!-- Sand Stream Flow -->
    <target android:name="streamFlow">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="alpha"
                    android:duration="800"
                    android:repeatCount="infinite"
                    android:valueFrom="0"
                    android:valueTo="1"
                    android:repeatMode="restart" />
                <objectAnimator
                    android:propertyName="scaleY"
                    android:duration="800"
                    android:repeatCount="infinite"
                    android:valueFrom="0.5"
                    android:valueTo="1.5"
                    android:repeatMode="restart" />
            </set>
        </aapt:attr>
    </target>
    
    <!-- Advanced Multi-Particle Animations -->
    <target android:name="particle1">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="alpha"
                    android:duration="800"
                    android:repeatCount="infinite"
                    android:valueFrom="0"
                    android:valueTo="1"
                    android:repeatMode="restart" />
                <objectAnimator
                    android:propertyName="translateY"
                    android:duration="800"
                    android:repeatCount="infinite"
                    android:valueFrom="-8"
                    android:valueTo="12"
                    android:repeatMode="restart" />
                <objectAnimator
                    android:propertyName="scaleX"
                    android:duration="800"
                    android:repeatCount="infinite"
                    android:valueFrom="1.2"
                    android:valueTo="0.8"
                    android:repeatMode="restart" />
            </set>
        </aapt:attr>
    </target>
    
    <target android:name="particle2">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="alpha"
                    android:duration="900"
                    android:repeatCount="infinite"
                    android:valueFrom="0"
                    android:valueTo="0.9"
                    android:startOffset="200"
                    android:repeatMode="restart" />
                <objectAnimator
                    android:propertyName="translateY"
                    android:duration="900"
                    android:repeatCount="infinite"
                    android:valueFrom="-6"
                    android:valueTo="10"
                    android:startOffset="200"
                    android:repeatMode="restart" />
                <objectAnimator
                    android:propertyName="translateX"
                    android:duration="900"
                    android:repeatCount="infinite"
                    android:valueFrom="0"
                    android:valueTo="2"
                    android:startOffset="200"
                    android:repeatMode="restart" />
            </set>
        </aapt:attr>
    </target>
    
    <target android:name="particle3">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="alpha"
                    android:duration="1100"
                    android:repeatCount="infinite"
                    android:valueFrom="0"
                    android:valueTo="0.7"
                    android:startOffset="400"
                    android:repeatMode="restart" />
                <objectAnimator
                    android:propertyName="translateY"
                    android:duration="1100"
                    android:repeatCount="infinite"
                    android:valueFrom="-4"
                    android:valueTo="8"
                    android:startOffset="400"
                    android:repeatMode="restart" />
            </set>
        </aapt:attr>
    </target>
    
    <target android:name="particle4">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="alpha"
                    android:duration="950"
                    android:repeatCount="infinite"
                    android:valueFrom="0"
                    android:valueTo="0.8"
                    android:startOffset="150"
                    android:repeatMode="restart" />
                <objectAnimator
                    android:propertyName="translateY"
                    android:duration="950"
                    android:repeatCount="infinite"
                    android:valueFrom="-7"
                    android:valueTo="9"
                    android:startOffset="150"
                    android:repeatMode="restart" />
                <objectAnimator
                    android:propertyName="translateX"
                    android:duration="950"
                    android:repeatCount="infinite"
                    android:valueFrom="0"
                    android:valueTo="-1"
                    android:startOffset="150"
                    android:repeatMode="restart" />
            </set>
        </aapt:attr>
    </target>
    
    <target android:name="particle5">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="alpha"
                    android:duration="750"
                    android:repeatCount="infinite"
                    android:valueFrom="0"
                    android:valueTo="0.6"
                    android:startOffset="500"
                    android:repeatMode="restart" />
                <objectAnimator
                    android:propertyName="translateY"
                    android:duration="750"
                    android:repeatCount="infinite"
                    android:valueFrom="-3"
                    android:valueTo="7"
                    android:startOffset="500"
                    android:repeatMode="restart" />
            </set>
        </aapt:attr>
    </target>
    
    <target android:name="particle6">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="alpha"
                    android:duration="850"
                    android:repeatCount="infinite"
                    android:valueFrom="0"
                    android:valueTo="0.7"
                    android:startOffset="350"
                    android:repeatMode="restart" />
                <objectAnimator
                    android:propertyName="translateY"
                    android:duration="850"
                    android:repeatCount="infinite"
                    android:valueFrom="-5"
                    android:valueTo="6"
                    android:startOffset="350"
                    android:repeatMode="restart" />
            </set>
        </aapt:attr>
    </target>
    
    <!-- Sparkle Effects Animation -->
    <target android:name="sparkle1">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="alpha"
                    android:duration="1500"
                    android:repeatCount="infinite"
                    android:valueFrom="0"
                    android:valueTo="1"
                    android:repeatMode="reverse" />
                <objectAnimator
                    android:propertyName="rotation"
                    android:duration="3000"
                    android:repeatCount="infinite"
                    android:valueFrom="0"
                    android:valueTo="360" />
            </set>
        </aapt:attr>
    </target>
    
    <target android:name="sparkle2">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="alpha"
                    android:duration="1800"
                    android:repeatCount="infinite"
                    android:valueFrom="0"
                    android:valueTo="1"
                    android:startOffset="600"
                    android:repeatMode="reverse" />
                <objectAnimator
                    android:propertyName="rotation"
                    android:duration="2500"
                    android:repeatCount="infinite"
                    android:valueFrom="0"
                    android:valueTo="-360"
                    android:startOffset="600" />
            </set>
        </aapt:attr>
    </target>
    
    <target android:name="sparkle3">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="alpha"
                    android:duration="2000"
                    android:repeatCount="infinite"
                    android:valueFrom="0"
                    android:valueTo="1"
                    android:startOffset="1200"
                    android:repeatMode="reverse" />
                <objectAnimator
                    android:propertyName="rotation"
                    android:duration="3500"
                    android:repeatCount="infinite"
                    android:valueFrom="0"
                    android:valueTo="360"
                    android:startOffset="1200" />
            </set>
        </aapt:attr>
    </target>
    
</animated-vector>
