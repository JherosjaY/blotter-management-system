<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Full Screen VideoView -->
    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/electric_blue"
        android:visibility="gone" />

    <!-- Video Controls Overlay - Inside Video with Fade Animation -->
    <RelativeLayout
        android:id="@+id/videoControlsOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:focusable="true">

        <!-- Center Play Controls - Clean & Minimal like 2nd picture -->
        <LinearLayout
            android:id="@+id/centerControls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:alpha="0.0"
            android:visibility="visible">

            <!-- Rewind 5s Button -->
            <ImageButton
                android:id="@+id/btnRewind"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:background="@drawable/circle_button_background"
                android:src="@drawable/ic_rewind_5"
                android:tint="@color/white"
                android:scaleType="centerInside"
                android:contentDescription="Rewind 5 seconds" />

            <!-- Play/Pause Button - Larger -->
            <ImageButton
                android:id="@+id/btnPlayPause"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:background="@drawable/circle_button_background_large"
                android:src="@drawable/ic_pause"
                android:tint="@color/white"
                android:scaleType="centerInside"
                android:contentDescription="Play/Pause" />

            <!-- Forward 5s Button -->
            <ImageButton
                android:id="@+id/btnForward"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:background="@drawable/circle_button_background"
                android:src="@drawable/ic_forward_5"
                android:tint="@color/white"
                android:scaleType="centerInside"
                android:contentDescription="Forward 5 seconds" />
        </LinearLayout>

        <!-- Bottom Progress Bar - Minimal like 2nd picture -->
        <LinearLayout
            android:id="@+id/bottomControls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:alpha="0.0"
            android:visibility="visible">

            <!-- Current Time -->
            <TextView
                android:id="@+id/tvCurrentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium" />

            <!-- Progress Bar -->
            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:progressTint="@color/electric_blue"
                android:thumbTint="@color/electric_blue"
                android:progressBackgroundTint="#33FFFFFF"
                android:max="100"
                android:progress="50" />

            <!-- Remaining Time (negative countdown) -->
            <TextView
                android:id="@+id/tvDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-0:00"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

    </RelativeLayout>

    <!-- Close Button - Top Right Corner -->
    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:background="@drawable/circle_button_background"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:tint="@color/white"
        android:scaleType="centerInside"
        android:contentDescription="Close"
        android:alpha="0.8" />

</FrameLayout>
