<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_secondary"
    android:orientation="vertical">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_dark_blue"
        app:navigationIcon="@drawable/ic_back_arrow"
        app:navigationIconTint="@color/text_primary"
        app:title="All Reports"
        app:titleTextColor="@color/text_primary" />

    <!-- Search Bar -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:strokeColor="@color/card_stroke"
        app:strokeWidth="1dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="none"
            app:hintEnabled="false"
            app:startIconDrawable="@drawable/ic_search"
            app:startIconTint="@color/text_secondary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search reports..."
                android:inputType="text"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary" />
        </com.google.android.material.textfield.TextInputLayout>
    </androidx.cardview.widget.CardView>

    <!-- Filter Chips -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/spacing_medium"
        android:paddingVertical="@dimen/spacing_small"
        android:scrollbars="none"
        android:fillViewport="false">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:selectionRequired="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAll"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/card_background"
                app:chipStrokeColor="@color/electric_blue"
                app:chipStrokeWidth="2dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipPending"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Pending"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/card_background"
                app:chipStrokeColor="@color/electric_blue"
                app:chipStrokeWidth="2dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAssigned"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assigned"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/card_background"
                app:chipStrokeColor="@color/electric_blue"
                app:chipStrokeWidth="2dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipOngoing"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ongoing"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/card_background"
                app:chipStrokeColor="@color/electric_blue"
                app:chipStrokeWidth="2dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipResolved"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resolved"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/card_background"
                app:chipStrokeColor="@color/electric_blue"
                app:chipStrokeWidth="2dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipClosed"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Closed"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/card_background"
                app:chipStrokeColor="@color/electric_blue"
                app:chipStrokeWidth="2dp" />
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- Reports List with Empty State -->
    <!-- Secondary Background Card Container (Always Visible) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/emptyStateCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:clipChildren="true"
        android:clipToPadding="true"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:strokeColor="@color/card_stroke"
        app:strokeWidth="2dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- RecyclerView for reports (Data Items) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerReports"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:visibility="gone" />

            <!-- Empty State Content (Hide when data exists) -->
            <LinearLayout
                android:id="@+id/emptyState"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="48dp"
                android:paddingEnd="48dp"
                android:paddingTop="48dp"
                android:paddingBottom="48dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:visibility="visible">

                <!-- Icon with circular background -->
                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="20dp"
                    app:cardBackgroundColor="@color/electric_blue"
                    app:cardCornerRadius="60dp"
                    app:cardElevation="8dp">

                    <ImageView
                        android:id="@+id/emptyStateIcon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="30dp"
                        android:src="@drawable/ic_onboarding_clipboard"
                        android:contentDescription="No reports" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/emptyStateTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="No Reports Found"
                    android:textColor="@color/text_primary"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/emptyStateSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Try adjusting your filters\nor search criteria."
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp" />

                <!-- Decorative element -->
                <View
                    android:layout_width="60dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/electric_blue"
                    android:alpha="0.8" />
            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
