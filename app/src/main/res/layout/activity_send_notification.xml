<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/body_background">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background_primary"
        app:navigationIcon="@drawable/ic_back_arrow"
        app:navigationIconTint="@color/text_primary"
        app:title="Send Notification"
        app:titleTextColor="@color/text_primary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Push Notification Header -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@android:drawable/ic_dialog_email"
                        android:tint="@color/electric_blue"
                        android:padding="8dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Push Notification"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Send announcements to users"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Recipients Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_person"
                    android:tint="@color/electric_blue"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recipients"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <RadioGroup
                    android:id="@+id/radioGroupRecipients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <RadioButton
                        android:id="@+id/radioAllUsers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘¥ All Users"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:checked="true"
                        android:padding="12dp"
                        android:buttonTint="@color/electric_blue" />

                    <RadioButton
                        android:id="@+id/radioSpecificUsers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘¤ Specific Users"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:padding="12dp"
                        android:buttonTint="@color/electric_blue" />

                    <RadioButton
                        android:id="@+id/radioAllAdmins"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘” All Admins"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:padding="12dp"
                        android:buttonTint="@color/electric_blue" />

                    <RadioButton
                        android:id="@+id/radioAllOfficers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘® All Officers"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:padding="12dp"
                        android:buttonTint="@color/electric_blue" />
                </RadioGroup>
            </androidx.cardview.widget.CardView>

            <!-- Notification Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_dialog_info"
                    android:tint="@color/electric_blue"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notification Title"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter notification title"
                android:layout_marginBottom="16dp"
                app:boxBackgroundColor="@color/card_background"
                app:boxStrokeColor="@color/electric_blue"
                app:hintTextColor="@color/electric_blue"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNotificationTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primary"
                    android:inputType="text"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Message -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:tint="@color/electric_blue"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Message"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter notification message"
                android:layout_marginBottom="24dp"
                app:boxBackgroundColor="@color/card_background"
                app:boxStrokeColor="@color/electric_blue"
                app:hintTextColor="@color/electric_blue"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNotificationMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primary"
                    android:inputType="textMultiLine"
                    android:minLines="5"
                    android:maxLines="10"
                    android:gravity="top" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Send Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSendNotification"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Send Notification"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:backgroundTint="@color/electric_blue"
                app:cornerRadius="12dp"
                app:icon="@android:drawable/ic_menu_send"
                app:iconTint="@color/white"
                app:iconGravity="textStart" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
