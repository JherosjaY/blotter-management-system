<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp">

    <!-- Timeline line -->
    <View
        android:id="@+id/vTimelineLineTop"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="@color/electric_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ivStatus"
        app:layout_constraintStart_toStartOf="@+id/ivStatus"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- Status indicator -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivStatus"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_check_circle"
        app:strokeColor="@color/electric_blue"
        app:strokeWidth="2dp"
        app:shapeAppearanceOverlay="@style/CircleImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/vTimelineLineBottom"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:contentDescription="Status indicator" />

    <!-- Timeline line bottom -->
    <View
        android:id="@+id/vTimelineLineBottom"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="@color/electric_blue"
        app:layout_constraintTop_toBottomOf="@+id/ivStatus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ivStatus" />

    <!-- Step content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toEndOf="@+id/ivStatus"
        app:layout_constraintTop_toTopOf="@+id/ivStatus">

        <TextView
            android:id="@+id/tvStepTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvStepDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAction"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:visibility="gone"
            app:strokeColor="@color/electric_blue"
            app:strokeWidth="1dp"
            app:backgroundTint="@android:color/transparent"
            app:cornerRadius="16dp"
            app:iconTint="@color/electric_blue"
            android:textColor="@color/electric_blue"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
