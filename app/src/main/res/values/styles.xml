<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ORIGINAL BUTTON STYLES -->
    
    <style name="ButtonPrimary" parent="Widget.Material3.Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="backgroundTint">@color/primary_blue</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="ButtonSecondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="strokeColor">@color/primary_blue</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>
    
    <!-- CardView for Secondary Background (Empty State Background) -->
    <style name="CardViewSecondaryBackground" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">8dp</item>
        <item name="strokeColor">@color/card_stroke</item>
        <item name="strokeWidth">2dp</item>
    </style>
    
    <!-- RecyclerView with Elevation (for FrameLayout z-ordering) -->
    <style name="RecyclerViewElevated">
        <item name="android:elevation">10dp</item>
        <item name="android:clipToPadding">false</item>
    </style>
    
    <style name="TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_blue</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/button_corner_radius_small</item>
        <item name="boxCornerRadiusTopEnd">@dimen/button_corner_radius_small</item>
        <item name="boxCornerRadiusBottomStart">@dimen/button_corner_radius_small</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/button_corner_radius_small</item>
        <item name="hintTextColor">@color/text_hint</item>
    </style>
    
    <!-- Enhanced TextInputLayout with Always Visible Borders -->
    <style name="TextInputLayoutEnhanced" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/input_border_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:textColorHint">#64748b</item>
    </style>
    
    <style name="TextHeadline">
        <item name="android:textSize">@dimen/text_size_xxlarge</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="TextTitle">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextBody">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <!-- Modern Alert Dialog Style -->
    <style name="ModernAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:background">@drawable/dialog_background</item>
        <item name="backgroundTint">@color/card_background</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="colorControlActivated">@color/electric_blue</item>
        <item name="colorAccent">@color/electric_blue</item>
    </style>
    
    <!-- Item Card Style (for ALL RecyclerView items - reports, hearings, notifications, etc.) -->
    <style name="ItemCardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/background_secondary</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">8dp</item>
        <item name="strokeColor">#334155</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
    <!-- Legacy alias for compatibility -->
    <style name="ReportCardStyle" parent="ItemCardStyle" />
    
    <!-- Circle Image View Style -->
    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    
    <!-- Date Picker Theme - Primary/Secondary Colors (No Violet Accent) -->
    <style name="DatePickerTheme" parent="Theme.Material3.Dark.Dialog">
        <item name="android:colorBackground">@color/primary_dark_blue</item>
        <item name="android:colorPrimary">@color/electric_blue</item>
        <item name="android:colorAccent">@color/electric_blue</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="colorSurface">@color/primary_dark_blue</item>
        <item name="colorPrimary">@color/electric_blue</item>
        <item name="colorSecondary">@color/electric_blue</item>
    </style>
    
    <!-- Time Picker Theme - Primary/Secondary Colors (No Violet Accent) -->
    <style name="TimePickerTheme" parent="Theme.Material3.Dark.Dialog">
        <item name="android:colorBackground">@color/primary_dark_blue</item>
        <item name="android:colorPrimary">@color/electric_blue</item>
        <item name="android:colorAccent">@color/electric_blue</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="colorSurface">@color/primary_dark_blue</item>
        <item name="colorPrimary">@color/electric_blue</item>
        <item name="colorSecondary">@color/electric_blue</item>
    </style>
</resources>
