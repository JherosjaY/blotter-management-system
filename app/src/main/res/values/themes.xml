<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.BlotterManagementSystemJAVA" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/info_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        
        <item name="colorSecondary">@color/info_blue</item>
        <item name="colorSecondaryVariant">@color/primary_blue</item>
        <item name="colorOnSecondary">@color/text_primary</item>
        
        <item name="android:colorBackground">@color/primary_dark_blue</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <item name="android:statusBarColor">@color/primary_dark_blue</item>
        <item name="android:navigationBarColor">@color/primary_dark_blue</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:enforceStatusBarContrast">false</item>
        <item name="android:enforceNavigationBarContrast">false</item>
        
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/text_primary</item>
        
        <!-- Override Material Design accent colors (FORCE BLUE!) -->
        <item name="colorAccent">@color/info_blue</item>
        <item name="colorControlActivated">@color/info_blue</item>
        <item name="colorControlHighlight">@color/info_blue</item>
        <item name="colorControlNormal">@color/text_secondary</item>
        
        <!-- Override text cursor/selection colors (NO PURPLE!) -->
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHighlight">#803b82f6</item>
        
        <!-- EditText cursor color -->
        <item name="editTextStyle">@style/CustomEditTextStyle</item>
        
        <!-- Apply custom dialog theme globally -->
        <item name="alertDialogTheme">@style/CustomAlertDialog</item>
        <item name="android:alertDialogTheme">@style/CustomAlertDialog</item>
    </style>

    <style name="Theme.BlotterManagementSystemJAVA" parent="Base.Theme.BlotterManagementSystemJAVA" />
    
    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_dark_blue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.BlotterManagementSystemJAVA</item>
    </style>
    
    <style name="Theme.Splash" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:windowBackground">@color/splash_background</item>
        <item name="android:statusBarColor">@color/splash_background</item>
        <item name="android:navigationBarColor">@color/splash_background</item>
        <item name="colorPrimary">@color/electric_blue</item>
    </style>
    
    <!-- DatePicker & TimePicker Dialog Theme -->
    <style name="Theme.App.DatePickerDialog" parent="android:Theme.Material.Dialog">
        <item name="android:colorAccent">@color/electric_blue</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:colorControlActivated">@color/electric_blue</item>
        <item name="android:datePickerStyle">@style/DatePickerStyle</item>
        <item name="android:windowBackground">@color/card_background</item>
        <item name="android:colorBackground">@color/card_background</item>
        <!-- Rounded corners -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowClipToOutline">true</item>
        <!-- Fix button colors -->
        <item name="android:buttonBarButtonStyle">@style/DialogButtonStyle</item>
    </style>
    
    <style name="Theme.App.TimePickerDialog" parent="android:Theme.Material.Dialog">
        <item name="android:colorAccent">@color/electric_blue</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:colorControlActivated">@color/electric_blue</item>
        <item name="android:timePickerStyle">@style/TimePickerStyle</item>
        <item name="android:windowBackground">@color/card_background</item>
        <item name="android:colorBackground">@color/card_background</item>
        <!-- Rounded corners -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowClipToOutline">true</item>
        <!-- Fix button colors -->
        <item name="android:buttonBarButtonStyle">@style/DialogButtonStyle</item>
    </style>
    
    <!-- Dialog Button Style -->
    <style name="DialogButtonStyle" parent="android:Widget.Material.Button.Borderless">
        <item name="android:textColor">@color/electric_blue</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <!-- Custom Alert Dialog Theme - Modern Dark -->
    <style name="CustomAlertDialog" parent="Theme.Material3.Dark.Dialog.Alert">
        <item name="android:background">@drawable/dialog_background</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:colorBackground">@color/card_background</item>
        <item name="backgroundTint">@color/card_background</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="colorPrimary">@color/info_blue</item>
        <item name="colorAccent">@color/info_blue</item>
        <item name="colorControlActivated">@color/electric_blue</item>
        <item name="android:colorControlActivated">@color/electric_blue</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="shapeAppearanceOverlay">@style/DialogShapeAppearance</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
    </style>
    
    <!-- Dialog Shape - Remove Blue Border -->
    <style name="DialogShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <style name="NegativeButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="PositiveButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/electric_blue</item>
    </style>
    
    <style name="NeutralButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="DatePickerStyle" parent="android:Widget.Material.DatePicker">
        <item name="android:headerBackground">@color/card_background</item>
        <item name="android:calendarTextColor">@color/text_primary</item>
        <item name="android:weekDayTextAppearance">@style/CalendarWeekDayTextAppearance</item>
        <item name="android:dateTextAppearance">@style/CalendarDateTextAppearance</item>
    </style>
    
    <style name="TimePickerStyle" parent="android:Widget.Material.TimePicker">
        <item name="android:headerBackground">@color/card_background</item>
        <item name="android:headerTimeTextAppearance">@style/TimePickerHeaderTextAppearance</item>
        <item name="android:numbersTextColor">@color/text_primary</item>
        <item name="android:numbersBackgroundColor">@color/card_background</item>
        <item name="android:numbersSelectorColor">@color/electric_blue</item>
    </style>
    
    <style name="CalendarWeekDayTextAppearance" parent="android:TextAppearance.Material.Body1">
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="CalendarDateTextAppearance" parent="android:TextAppearance.Material.Body1">
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TimePickerHeaderTextAppearance" parent="android:TextAppearance.Material.Display1">
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- Custom EditText Style - Blue cursor instead of purple -->
    <style name="CustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>
</resources>